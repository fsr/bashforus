.page-header
  h2 Resend unlock instructions
p
  = simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), defaults: { input_html: { class: 'form-control' } }, html: { method: :post, class: 'form-horizontal' }) do |f|
    = f.error_notification
    = f.full_error :unlock_token
    = f.input :email, required: true, autofocus: true
    .form-group
      .col-sm-offset-2.col-sm-8
        = f.button :submit, 'Resend unlock instructions', class: 'btn btn-info'
  = render "devise/shared/links" %> 

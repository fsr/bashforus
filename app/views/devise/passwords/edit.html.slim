.page-header
  h2 Change your password
p
  = simple_form_for(resource, as: resource_name, url: password_path(resource_name), defaults: { input_html: { class: 'form-control' } }, html: { method: :put ,class: 'form-horizontal' }) do |f|
    = f.error_notification
    = f.input :reset_password_token, as: :hidden
    = f.full_error :reset_password_token
    = f.input :password, label: "New password", required: true, autofocus: true
    = f.input :password_confirmation, label: "Confirm your new password", required: true
    .form-group
      .col-sm-offset-2.col-sm-8
	    = f.button :submit, "Change my password", class: 'btn btn-info'
  = render "devise/shared/links"
